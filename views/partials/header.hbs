<!-- Modal Structure -->
<div id="modal1" class="modal">
  <div class="modal-header center">
    <div style="margin-top: 30px; margin-bottom: 0px;"><img src="../images/main_logo_techkid.png"></div>
  </div>
  <div class="modal-content">
    <div class="row">
      <form action="/users" method="POST" class="col s12">

        <div class="row">
          <div class="input-field col s12">
            <input id="email" type="email" class="validate">
            <label for="email">Email</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <input id="password" type="password" class="validate">
            <label for="password">Password</label>
          </div>
        </div>

        <div class="row">
          <div class="col s12 center">
            <button type="submit" class="waves-effect waves-light btn green">signin</button>
          </div>
        </div>
      </form>
    </div>
